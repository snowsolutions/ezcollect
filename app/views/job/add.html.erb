<div class="row">
  <div class="container-header">
    <div class="page-title">
      <h1><%= @page_title %></h1>
    </div>
    <div class="form-action action-bar top-bar">
      <a href="<%= job_url %>" class="btn btn-secondary"><%= t('back') %></a>
      <button class="btn form-submit"><%= t('submit') %></button>
    </div>
  </div>
  <%= form_with url: job_add_url, method: :post, id: "job-create-form" do |form| %>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('General') %></h2>
      </div>
      <div class="">
        <div class="col s6">
          <label for="title"><%= t('job.field.title') %></label>
          <input type="text" id="title" name="job[title]" class="validate">
        </div>
        <div class="col s6">
          <label for="yoe"><%= t('job.field.yoe') %></label>
          <input type="text" id="yoe" name="job[yoe]" class="validate">
        </div>
        <div class="col s6">
          <label for="employment_type"><%= t('job.field.employment_type') %></label>
          <select id="employment_type" name="job[employment_type]" class="select-dropdown">
            <option value="" disabled selected><%= t('choose_one') %></option>
            <% for option in JobEmploymentTypeOption.to_option %>
              <option value="<%= option['value'] %>"><%= option['label'] %></option>
            <% end %>
          </select>
        </div>
        <div class="col s6">
          <label for="work_mode"><%= t('job.field.work_mode') %></label>
          <select id="work_mode" name="job[work_mode]" class="select-dropdown">
            <option value="" disabled selected><%= t('choose_one') %></option>
            <% for option in JobWorkModeOption.to_option %>
              <option value="<%= option['value'] %>"><%= option['label'] %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('Information') %></h2>
      </div>
      <div class="">
        <div class="col s12">
          <label for="description"><%= t('job.field.description') %></label>
          <textarea id="description" name="job[description]" class="ckeditor"></textarea>
        </div>
        <div class="col s12">
          <label for="title"><%= t('job.field.must_have_req') %></label>
          <textarea id="must_have_req" name="job[must_have_req]" class="ckeditor"></textarea>
        </div>
        <div class="col s12">
          <label for="nice_to_have_req"><%= t('job.field.nice_to_have_req') %></label>
          <textarea id="nice_to_have_req" name="job[nice_to_have_req]" class="ckeditor"></textarea>
        </div>
        <div class="col s12">
          <label for="benefit"><%= t('job.field.benefit') %></label>
          <textarea id="benefit" name="job[benefit]" class="ckeditor"></textarea>
        </div>
      </div>
    </div>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('Salary') %></h2>
      </div>
      <div class="">
        <div class="col xl3 l3 m6 s12">
          <label for="salary_currency"><%= t('job.field.salary_currency') %></label>
          <select id="salary_currency" name="job[salary_currency]" class="select-dropdown">
            <option value="" disabled selected><%= t('choose_one') %></option>
            <% for option in SystemSupportCurrencyOption.to_option %>
              <option value="<%= option['value'] %>"><%= option['label'] %></option>
            <% end %>
          </select>
        </div>
        <div class="col xl3 l3 m6 s12">
          <label for="internal_salary_from"><%= t('job.field.internal_salary_from') %></label>
          <input type="text" id="internal_salary_from" name="job[internal_salary_from]" class="validate">
        </div>
        <div class="col xl3 l3 m6 s12">
          <label for="internal_salary_to"><%= t('job.field.internal_salary_to') %></label>
          <input type="text" id="internal_salary_to" name="job[internal_salary_to]" class="validate">
        </div>
        <div class="col xl3 l3 m6 s12">
          <label for="public_salary"><%= t('job.field.public_salary') %></label>
          <input type="text" id="public_salary" name="job[public_salary]" class="validate">
        </div>
      </div>
    </div>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('Geo information') %></h2>
      </div>
      <div class="">
        <div class="col s6">
          <label for="location_country"><%= t('address_country') %></label>
          <input type="text" id="location_country" name="job[location_country]" class="validate">
        </div>
        <div class="col s6">
          <label for="location_state"><%= t('address_state') %></label>
          <input type="text" id="location_state" name="job[location_state]" class="validate">
        </div>
        <div class="col s6">
          <label for="location_city"><%= t('address_city') %></label>
          <input type="text" id="location_city" name="job[location_city]" class="validate">
        </div>
        <div class="col s6">
          <label for="location_street"><%= t('address_street') %></label>
          <input type="text" id="location_street" name="job[location_street]" class="validate">
        </div>
      </div>
    </div>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('Schedule') %></h2>
      </div>
      <div class="">
        <div class="col s6">
          <label for="issue_from"><%= t('job.field.issue_from') %></label>
          <input type="text" id="issue_from" name="job[issue_from]" class="validate datepicker">
        </div>
        <div class="col s6">
          <label for="issue_to"><%= t('job.field.issue_to') %></label>
          <input type="text" id="issue_to" name="job[issue_to]" class="validate datepicker">
        </div>
      </div>
    </div>
    <div class="field-group col s12">
      <div class="group-title">
        <h2><%= t('additional') %></h2>
      </div>
      <div class="">
        <div class="col s6">
          <label for="status"><%= t('job.field.status') %></label>
          <select id="status" name="job[status]" class="select-dropdown">
            <option value="" disabled selected><%= t('choose_one') %></option>
            <% for option in JobStatusOption.to_option %>
              <option value="<%= option['value'] %>"><%= option['label'] %></option>
            <% end %>
          </select>
        </div>
        <div class="col s6">
          <label for="quantity"><%= t('job.field.quantity') %></label>
          <input type="text" id="quantity" name="job[quantity]" class="validate">

        </div>
      </div>
    </div>
  <% end %>
  <div class="form-action action-bar bottom-bar">
    <a href="/job" class="btn btn-secondary"><%= t('back') %></a>
    <button class="btn form-submit"><%= t('submit') %></button>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
    require(['jquery', 'form/util'], function ($, form) {
        form.init('#job-create-form')
    })
</script>