<div id="login-form" class="row z-depth-3">
  <h1>Sign-in to start your work</h1>
  <form class="col s12" method="POST" action="/login">
    <div class="row">
      <div class="input-field col s12">
        <input value="" id="username" type="text" name="username" class="validate">
        <label for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="password" type="password" name="password" class="validate">
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <button class="btn waves-effect waves-light" id="login-btn" type="submit" name="action">Submit
          <i class="material-icons right"></i>
        </button>
      </div>
      <div class="col s12">
        <div class="register-tip">
          Don't have an account? <a href="/register">Register one!</a>
        </div>
      </div>
    </div>
  </form>
</div>